<?xml version="1.0"?>

<portlet-app version="2.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

     <portlet>
          <portlet-name>mail-client</portlet-name>
          <display-name>mail-client</display-name>
          <portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>

          <init-param>
               <name>javax.portlet.faces.defaultViewId.view</name>
               <value>/jsf/view.xhtml</value>
          </init-param>
          <expiration-cache>0</expiration-cache>
          <supports>
               <mime-type>text/html</mime-type>
          </supports>
          <portlet-info>
               <title>Mail Client</title>
               <short-title>mail-client</short-title>
               <keywords>mail-client</keywords>
          </portlet-info>
          <security-role-ref>
               <role-name>administrator</role-name>
          </security-role-ref>
          <security-role-ref>
               <role-name>guest</role-name>
          </security-role-ref>
          <security-role-ref>
               <role-name>power-user</role-name>
          </security-role-ref>
          <security-role-ref>
               <role-name>user</role-name>
          </security-role-ref>
     </portlet>


</portlet-app>